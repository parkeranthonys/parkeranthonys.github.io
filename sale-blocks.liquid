{%- if section.settings.background != settings.background and section.settings.background != 'rgba(0,0,0,0)' -%}
    {%- assign blends_with_background = false -%}
  {%- else -%}
    {%- assign blends_with_background = true -%}
  {%- endif -%}
  
  <style>
              #shopify-section-{{ section.id }} {
                {%- if section.settings.background == 'rgba(0,0,0,0)' -%}
                  {%- assign section_background = settings.background -%}
                {%- else -%}
                  {%- assign section_background = section.settings.background -%}
                {%- endif -%}
  
                {%- if section.settings.text_color == 'rgba(0,0,0,0)' -%}
                  {%- assign heading_color = settings.heading_color -%}
                  {%- assign text_color = settings.text_color -%}
                {%- else -%}
                  {%- assign heading_color = section.settings.text_color -%}
                  {%- assign text_color = section.settings.text_color -%}
                {%- endif -%}
  
                --heading-color: {{ heading_color.red }}, {{ heading_color.green }}, {{ heading_color.blue }};
                --text-color: {{ text_color.red }}, {{ text_color.green }}, {{ text_color.blue }};
  
                --section-background: {{ section_background.red }}, {{ section_background.green }}, {{ section_background.blue }};
              }
  
              {%- for block in section.blocks -%}
                #block-{{ section.id }}-{{ block.id }} {
                  {%- unless block.type == 'video' -%}
                    --heading-color: {{ block.settings.text_color.red }}, {{ block.settings.text_color.green }}, {{ block.settings.text_color.blue }};
                    --text-color: {{ block.settings.text_color.red }}, {{ block.settings.text_color.green }}, {{ block.settings.text_color.blue }};
                    --section-block-background: {{ block.settings.background.red }}, {{ block.settings.background.green }}, {{ block.settings.background.blue }};
                  --primary-button-background: {{ block.settings.button_background.red }}, {{ block.settings.button_background.green }}, {{ block.settings.button_background.blue }};
                      --primary-button-text-color: {{ block.settings.button_text_color.red }}, {{ block.settings.button_text_color.green }}, {{ block.settings.button_text_color.blue }};
  
                    {%- if block.type == 'image' or block.type == 'text' -%}
  
  
                      {%- assign text_position = block.settings.text_position | split: '_' | first -%}
  
                      {%- case text_position -%}
                        {%- when 'top' -%}
                          {%- assign section_items_alignment = 'flex-start' -%}
                        {%- when 'middle' -%}
                          {%- assign section_items_alignment = 'center' -%}
                        {%- when 'bottom' -%}
                          {%- assign section_items_alignment = 'flex-end' -%}
                      {%- endcase -%}
  
                      --section-blocks-alignment: {{ section_items_alignment }};
                    {%- endif -%}
  
                    {%- if block.type == 'featured_products' -%}
                      --prev-next-button-background: var(--section-block-background);
                      --prev-next-button-color: var(--text-color);
                    {%- endif -%}
                  {%- endunless -%}
                }
              {%- endfor -%}
  
              .sale-date {
              color: {{ block.settings.text_color }};
              font-size: 16px;
              font-style: normal;
              margin-top: 28px;
              font-weight: 400;
              text-align: center;
              letter-spacing: 1px;
              text-transform: uppercase;
              margin-bottom:10px;
            }
  
              .sale-percent {
              flex: 0 0 auto;
              width: 150px;
              height: 150px;
              display: flex;
              align-items: center;
              border-color: rgba(120, 120, 120, 0.4);
              border-style: dashed;
              border-width: 0px;
              border-radius: 100%;
              flex-direction: column;
              justify-content: center;
              background-color: {{ block.settings.button_background }};
              margin-left:auto;
              margin-right:auto;
              line-height:40px;
            }
  
              .sale-sale {
              color: {{ block.settings.text_color }};
              font-size: 40px;
              align-self: center;
              font-style: normal;
              margin-top: 5px;
              text-align: center;
              font-family: "ITC Caslon No 224", serif;
              font-weight: 400;
              line-height: 1;
              margin-left: 5px;
              margin-right: 5px;
              margin-bottom: 8px;
            }
  
            .sale-exclusions {
            color: {{ block.settings.text_color }};
            font-style: italic;
            text-align: center;
            font-weight: 400;
            letter-spacing: 0px;
            margin-top:10px;
          }
  
            .sale-button {
            font-size: 20px;
            font-style: normal;
            margin-top: 20px;
            font-weight: 400;
            border-width: 0px;
            border-radius: 10px;
            letter-spacing: 3px;
            text-transform: uppercase;
            text-decoration: none;
            margin-left:auto;
            margin-right:auto;
          }
  
          .sale-block {
          flex: 0 0 auto;
          width: 600px;
          height: auto;
          display: flex;
          align-items: center;
          text-align: center;
          flex-direction: column;
          justify-content: center;
        }
  
        .sale-text {
        color: {{ block.settings.button_text_color }};
        font-size: 40px;
        font-style: normal;
        margin-top: 0px;
        font-family: Spectral;
        font-weight: 700;
        text-transform: uppercase;
      }
  
       .coupon-date {
              color: {{ block.settings.text_color }};
              font-size: 16px;
              font-style: normal;
              margin-top: 28px;
              font-weight: 400;
              text-align: center;
              letter-spacing: 1px;
              margin-bottom:10px;
        text-transform: uppercase;
            }
  
              .coupon-percent {
              flex: 0 0 auto;
              display: flex;
              align-items: center;
              flex-direction: column;
              justify-content: center;
              margin-left:auto;
              margin-right:auto;
              line-height:60px;
                margin-bottom:20px;
                margin-top:10px;
            }
  
              .coupon-sale {
              color: {{ block.settings.text_color }};
              font-size: 32px;
              align-self: center;
              font-style: normal;
              margin-top: 5px;
              text-align: center;
              font-family: "ITC Caslon No 224", serif;
              font-weight: 400;
              line-height: 1;
              margin-left: 5px;
              margin-right: 5px;
              margin-bottom: 8px;
            }
  
            .coupon-exclusions {
            color: {{ block.settings.text_color }};
            font-style: italic;
            text-align: center;
            font-weight: 400;
            letter-spacing: 0px;
            margin-top:10px;
          }
  
            .coupon-button {
            font-size: 20px;
            font-style: normal;
            margin-top: 20px;
            font-weight: 400;
            border-width: 0px;
            border-radius: 10px;
            letter-spacing: 3px;
            text-transform: uppercase;
            text-decoration: none;
            margin-left:auto;
            margin-right:auto;
          }
  
          .coupon-block {
          align-items: center;
          text-align: center;
          flex-direction: column;
          justify-content: center;
            border-radius:10px;
            border-width: 0px;
            padding:var(--promotion-block-padding);
        }
  
        .coupon-text {
        color: {{ block.settings.button_text_color }};
        font-size: 60px;
        font-style: normal;
        margin-top: 0px;
        font-family: Spectral;
        font-weight: 700;
        text-transform: uppercase;
      }
  
      .promotion-block{
        align-items:center;
      }
  
      .product-item-meta__vendor{
        color: #E06166;
      }
    .promotion-block__product-list .product-item__image-wrapper{
      max-width:200px;
    }
    .product-item__cta-wrapper, .product-item-meta__price-list-container{
      visibility:hidden;
      height:0px;
    }
  </style>
  
  <section class="section {% unless blends_with_background %}section--flush{% endunless %}">
    <div class="section__color-wrapper">
      <div class="container {% unless blends_with_background %}vertical-breather{% endunless %}">
        {%- if section.settings.subheading != blank or section.settings.title != blank -%}
          <header class="section__header text-container">
            {%- if section.settings.subheading != blank -%}
              <h2 class="heading heading--small">{{ section.settings.subheading | escape }}</h2>
            {%- endif -%}
            {%- if section.settings.title != blank -%}
              <h3 class="heading h2">{{ section.settings.title | escape }}</h3>
            {%- endif -%}
          </header>
        {%- endif -%}
        {%- capture section_content -%}
              <div class="promotion-block-list {% unless section.settings.stack_on_mobile %}promotion-block-list--scrollable{% endunless %}">
                  {%- for block in section.blocks -%} {%- case block.type -%} 
                    
                    {%- when 'image' -%} {%- capture block_content -%} {%- if block.settings.image != blank -%} {%- assign block_column_ratio = 3 | at_most: section.blocks.size -%} {%-
                  if block.settings.highlight -%} {%- assign block_column_ratio = 2 -%} {%- endif -%} <img class="promotion-block__image" style="object-position:{{ block.settings.image_position }};" loading="lazy" sizes="(max-width: 740px) calc(100vw - 24px * 2), calc(min(100vw, 1560px) / {{
                  block_column_ratio }} - 20px * {{ block_column_ratio | minus: 1 }})" {% render 'image-attributes', image: block.settings.image, sizes: '200,300,400,500,600,700,800,900,1000,1100,1200,1300,1400,1500,1600' %}> {%- endif -%}
  
                  <div
                      class="promotion-block__content-wrapper text-container"
                  >
                       {%- if block.settings.link_text != blank -%} {%- if block.settings.link_style == 'link' -%}
                      <span class="heading heading--small link">{{ block.settings.link_text | escape }}</span>
                      {%- else -%} {%- if block.settings.subtext != blank -%}
                      <div class="button-wrapper" style="margin-top: 25px;">
                          <span class="button button--small button--primary">{{ block.settings.link_text | escape }}</span>
                      </div>
                      {%- else -%}
                      <div class="button-wrapper">
                          <span class="button button--small button--primary">{{ block.settings.link_text | escape }}</span>
                      </div>
                      {%- endif -%} {%- endif -%} {%- endif -%}
                  </div>
  
                  {%- endcapture -%} {%- if block.settings.link_url != blank -%}
                  <a
                      id="block-{{ section.id }}-{{ block.id }}"
                      href="{{ block.settings.link_url }}"
                      class="promotion-block {% if block.settings.highlight %}promotion-block--highlight{% endif %} {% if section.blocks.size == 3 %}promotion-block--compact{% endif %} promotion-block--{{ section.settings.section_size }} image-zoom"
                      {{
                      block.shopify_attributes
                      }}
                  >
                      {{- block_content -}}
                  </a>
                  {%- else -%}
                  <div
                      id="block-{{ section.id }}-{{ block.id }}"
                      class="promotion-block {% if block.settings.highlight %}promotion-block--highlight{% endif %} {% if section.blocks.size == 3 %}promotion-block--compact{% endif %} promotion-block--{{ section.settings.section_size }} image-zoom"
                      {{
                      block.shopify_attributes
                      }}
                  >
                      {{- block_content -}}
                  </div>
                  {%- endif -%} 
  
                {%- when 'text' -%} 
                    {%- capture block_content -%} {%- if block.settings.image != blank -%} {%- assign block_column_ratio = 3 | at_most: section.blocks.size -%} {%-
                  if block.settings.highlight -%} {%- assign block_column_ratio = 2 -%} {%- endif -%} {%- endif -%}
  
                  <div
                      class="promotion-block__content-wrapper text-container"
                      style="{% if block.settings.text_position contains 'center' %}text-align: center{% elsif block.settings.text_position contains 'right' %}text-align: end{% endif %}"
                  >
                      {%- if block.settings.image != blank -%} <div class="sale-percent"><img width="150px" height="150px" src={{ block.settings.image | image_url }}> </div>
                      {%- else -%}
                        <div class="sale-percent" style="background-color:{{ block.settings.button_background }};"> <span class="sale-text" style="margin-top:5px;color:{{ block.settings.button_text_color }};">{{ block.settings.percent }}%</span>
              <span class="sale-text" style="color:{{ block.settings.button_text_color }};">off</span></div>
                      {%- endif -%}
                      
                      {%- if block.settings.subheading != blank -%}
                      <h3 class="sale-date">{{ block.settings.subheading | escape }}</h3>
                      {%- endif -%} 
                      
                      {%- if block.settings.title != blank -%}
                      <h2 class="sale-sale">{{ block.settings.title | escape | newline_to_br }}</h2>
                      {%- endif -%}
                      
                      {%- if block.settings.subtext != blank -%}
                      <p class="sale-exclusions">{{ block.settings.subtext | escape }}</p>
                      {%- endif -%} 
                      
                      {%- if block.settings.link_text != blank -%} 
                        <div style="text-align:center;"><a class="sale-button button" href="{{ block.settings.link_url }}" style="background-color:{{ block.settings.button_background }};color:{{ block.settings.button_text_color }};">
                          {{ block.settings.link_text | escape }}
                      </a></div>
                        {%- endif -%}
                  </div>
  
                  {%- endcapture -%} 
                    
                  <div
                      id="block-{{ section.id }}-{{ block.id }}"
                      class="promotion-block {% if block.settings.highlight %}promotion-block--highlight{% endif %} {% if section.blocks.size == 3 %}promotion-block--compact{% endif %} promotion-block--{{ section.settings.section_size }} image-zoom"
                      {{
                      block.shopify_attributes
                      }}
                  >
                      {{- block_content -}}
                  </div> 
  
                    {%- when 'quote' -%} 
                    {%- capture block_content -%} {%- if block.settings.image != blank -%} {%- assign block_column_ratio = 3 | at_most: section.blocks.size -%} {%-
                  if block.settings.highlight -%} {%- assign block_column_ratio = 2 -%} {%- endif -%} {%- endif -%}
  
                  <div
                      class="promotion-block__content-wrapper text-container"
                      style="{% if block.settings.text_position contains 'center' %}text-align: center{% elsif block.settings.text_position contains 'right' %}text-align: end{% endif %}"
                  >
  
                      {%- if block.settings.subheading != blank -%}
                      <h3 class="coupon-date" style="color:{{ block.settings.background_color }};">{{ block.settings.subheading | escape }}</h3>
                      {%- endif -%} 
                      
                      <div class="coupon-block" style="background-color:{{ block.settings.background_color }};">
                      
                      {%- if block.settings.image != blank -%} <div class="coupon-percent"><img width="150px" height="150px" src={{ block.settings.image | image_url }}> </div>
                      {%- else -%}
                        <div class="coupon-percent" > <span class="coupon-text" style="color:{{ block.settings.text_color }};">{{ block.settings.percent }}%</span>
              <span class="coupon-text" style="color:{{ block.settings.text_color }};">off</span></div>
                      {%- endif -%}
                      
                      {%- if block.settings.title != blank -%}
                      <h2 class="coupon-sale">{{ block.settings.title | escape | newline_to_br }}</h2>
                      {%- endif -%}
                      
                      {%- if block.settings.subtext != blank -%}
                      <p class="coupon-exclusions">{{ block.settings.subtext | escape }}</p>
                      {%- endif -%} 
                      
                      {%- if block.settings.link_text != blank -%} 
                        <div style="text-align:center;"><a class="coupon-button button" href="{{ block.settings.link_url }}" style="background-color:{{ block.settings.button_background }};color:{{ block.settings.button_text_color }};">
                          {{ block.settings.link_text | escape }}
                      </a></div>
                        {%- endif -%}
                      
                      </div>
                  </div>
  
                  {%- endcapture -%} 
                    
                  <div
                      id="block-{{ section.id }}-{{ block.id }}"
                      class="promotion-block {% if block.settings.highlight %}promotion-block--highlight{% endif %} {% if section.blocks.size == 3 %}promotion-block--compact{% endif %} promotion-block--{{ section.settings.section_size }} image-zoom"
                      {{
                      block.shopify_attributes
                      }}
                    style="padding:0px;"
                  >
                      {{- block_content -}}
                  </div> 
  
                  {%- when 'featured_products' -%}
                  <div
                      id="block-{{ section.id }}-{{ block.id }}"
                      class="promotion-block promotion-block--products {% if block.settings.highlight %}promotion-block--highlight{% endif %} promotion-block--{{ section.settings.section_size }}"
                      {{
                      block.shopify_attributes
                      }}
                  >
                      <div class="promotion-block__content-wrapper">
                    
                     
                    
                    {%- assign shown_products = 0 -%} 
  
                    {% if block.settings.highlight %}
  
                      
                      {%- capture product_items -%} 
                        
                              <native-carousel-item {% if shown_products>
                                  0 %}hidden{% endif %} class="promotion-block__product-list-item" style="display:flex;justify-content:space-evenly;gap:30px;width:95%;margin:auto;overflow:hidden;flex-wrap:wrap;"> 
  
                              {%- assign option_setting = 'product_' | append: 1 -%} 
                              {%- assign product = block.settings[option_setting] -%} 
                                {%- if product != blank -%}
                                    {%- render 'product-item', product: product, reduced_content: true, sizes_attribute: '200px' -%} 
                                {%- endif -%}
  
                              {%- assign option_setting = 'product_' | append: 2 -%} 
                              {%- assign product = block.settings[option_setting] -%}     
                              {%- if product != blank -%}
                                    {%- render 'product-item', product: product, reduced_content: true, sizes_attribute: '200px' -%} 
                                {%- endif -%}
                                
                              {%- assign shown_products = shown_products | plus: 2 -%}
                              </native-carousel-item>
  
                              {%- assign option_setting = 'product_' | append: 3 -%} 
                              {%- assign product = block.settings[option_setting] -%} 
                                {%- if product != blank -%}
                                    <native-carousel-item {% if shown_products>
                                  0 %}hidden{% endif %} class="promotion-block__product-list-item" style="display:flex;justify-content:space-evenly;gap:30px;width:95%;margin:auto;overflow:hidden;flex-wrap:wrap;"> 
  
                                    {%- render 'product-item', product: product, reduced_content: true, sizes_attribute: '200px' -%} 
  
                                    {%- assign option_setting = 'product_' | append: 4 -%} 
                                    {%- assign product = block.settings[option_setting] -%}     
                                    {%- if product != blank -%}
                                          {%- render 'product-item', product: product, reduced_content: true, sizes_attribute: '200px' -%} 
                                      {%- endif -%}
                                      
                                    {%- assign shown_products = shown_products | plus: 2 -%}
                                    </native-carousel-item>
                                {%- endif -%}
                            
                      {%- endcapture -%} 
   
                    {% else %}    
                        
                      {%- capture product_items -%} 
                        {%- for i in (1..4) -%} 
                          {%- assign option_setting = 'product_' | append: i -%} 
                          {%- assign product = block.settings[option_setting] -%} 
                          {%- if product != blank -%}
                            <native-carousel-item {% if shown_products>
                                0 %}hidden{% endif %} class="promotion-block__product-list-item"> 
                            {%- render 'product-item', product: product, reduced_content: true, sizes_attribute: '200px' -%} 
                            {%- assign shown_products = shown_products | plus: 1 -%}
                            </native-carousel-item>
                          {%- endif -%} 
                        {%- endfor -%} 
                      {%- endcapture -%} 
                        
                    {% endif %}   
                    
                    {%- if shown_products == 0 -%} 
                      {%- comment -%}Display placeholder if we have not shown anything{%- endcomment -%} 
                      {%- capture product_items -%} 
                        {%- for i in (1..4) -%}
                          <native-carousel-item {% if shown_products>
                              0 %}hidden{% endif %} class="promotion-block__product-list-item"> {%- capture product_image -%}product-{% cycle '1', '2', '3', '4', '5' %}{%- endcapture -%} {%- render 'product-item-placeholder', product_image:
                              product_image, reduced_content: true -%} {%- assign shown_products = shown_products | plus: 1 -%}
                          </native-carousel-item>
                          {%- endfor -%} 
                      {%- endcapture -%}
                    {%- endif -%}
  
                          <native-carousel class="promotion-block__product-list-wrapper">
                              <div class="promotion-block__product-list hide-scrollbar">
                                  {{- product_items -}}
                              </div>
  
                              {%- if shown_products > 1 -%}
                              <prev-next-buttons class="promotion-block__product-list-prev-next">
                                  <button class="prev-next-button prev-next-button--small" disabled>
                                      <span class="visually-hidden">{{ 'general.accessibility.previous' | t }}</span>
                                      {%- include 'icon' with 'nav-arrow-left', width: 18, height: 10, direction_aware: true -%}
                                  </button>
  
                                  <button class="prev-next-button prev-next-button--small">
                                      <span class="visually-hidden">{{ 'general.accessibility.next' | t }}</span>
                                      {%- include 'icon' with 'nav-arrow-right', width: 18, height: 10, direction_aware: true -%}
                                  </button>
                              </prev-next-buttons>
                              {%- endif -%}
  
                            {%- if block.settings.link_text != blank -%}
                            
                          <div style="text-align:center;"><a class="sale-button button" href="{{ block.settings.link_url }}" style="margin-top:20px;width:100%;background-color:{{ block.settings.accent }};color:#fff;">
                          {{ block.settings.link_text | escape }}
                      </a></div>
  
                        
                          {%- endif -%}
                          </native-carousel>
                      </div>
                  </div>
                  {%- endcase -%} {%- endfor -%}
              </div>
              {%- endcapture -%}
        {%- if section.settings.stack_on_mobile -%}
          {{- section_content -}}
        {%- else -%}
          <div class="scroller">
            <div class="scroller__inner">
              {{- section_content -}}
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </section>
  
  {% schema %}
  {
    "name": "Sale blocks",
    "class": "shopify-section--promotion-blocks",
    "settings": [
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Subheading"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Sale blocks"
      },
      {
        "type": "select",
        "id": "section_size",
        "label": "Block height",
        "options": [
          {
            "value": "small",
            "label": "Small"
          },
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "large",
            "label": "Large"
          }
        ],
        "default": "medium"
      },
      {
        "type": "checkbox",
        "id": "stack_on_mobile",
        "label": "Stack on mobile",
        "default": true
      },
      {
        "type": "header",
        "content": "Colors"
      },
      {
        "type": "color",
        "id": "background",
        "label": "Background",
        "default": "rgba(0,0,0,0)"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "rgba(0,0,0,0)"
      }
    ],
    "blocks": [
      {
        "type": "quote",
        "name": "Sale Coupon",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "1200 x 600px .jpg recommended"
          },
          {
            "type": "checkbox",
            "id": "highlight",
            "label": "Highlight tile",
            "info": "A highlighted tile takes bigger space. Only has effect on desktop. Do not highlight more than 1 item per row.",
            "default": false
          },
          {
            "type": "text",
            "id": "percent",
            "label": "Percent Off",
            "default": "25"
          },
          {
            "type": "text",
            "id": "subheading",
            "label": "Through date",
            "default": "For A Limited Time:"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Regular Price Merchandise!"
          },
          {
            "type": "text",
            "id": "link_text",
            "label": "Link text"
          },
          {
            "type": "url",
            "id": "link_url",
            "label": "Link URL"
          },
          {
            "type": "text",
            "id": "subtext",
            "label": "Subtext"
          },
          {
            "type": "color",
            "id": "background_color",
            "label": "Background",
            "default": "#E06166"
          },
